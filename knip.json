{
  "binaries": false,
  "entry": ["{apps,packages}/**/src/index.{ts,tsx}"],
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/*",
    "**/metro.config.js",
    "**/eslint.config.mjs",
    "**/jest.*.js",
    "**/babel.config.js",
    "**/*.ios.*",
    "**/*.android.*",
    "**/*.web.*"
  ],
  "project": ["{apps,packages}/**/src/**/*.{ts,tsx}"],
  "rules": {
    "binaries": "off",
    "classMembers": "error",
    "dependencies": "off",
    "duplicates": "error",
    "enumMembers": "error",
    "exports": "error",
    "files": "error",
    "nsExports": "error",
    "nsTypes": "error",
    "types": "error",
    "unlisted": "error",
    "unresolved": "error"
  },
  "strict": true
}
